{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cora AI",
  "version": "1.0.0",
  "identifier": "net.oe74.cora-ai",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd web && npm run dev",
    "beforeBuildCommand": "cd web && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cora AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
